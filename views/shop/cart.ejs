<html>
    <title>GreenMART</title>
    <head>
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous"> 
        <link rel="stylesheet" href="/css/cart.css">
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"> 
    </head>
    <body>
        <div><%- include('../includes/navigation.ejs')%></div>
        <div class="container">
        <% if (cart.length==0) {%>
             <h1 style="margin-left: 20%; margin-right: 20%;">YouR Cart is Empty</h1>
             
        <% } %>
        <% let cost=0 %>
        <% if (cart.length>0) {%> 
          
            <div class="container">
                <div class="jumbotron">Your Cart</div>
              </div>
              <div class="row"> 
                <h6 class="name col-md-4 col-sm-4 col-4">Product </h6>
                <h6 class="price col-md-2 col-sm-2 col-2">Price</h6> 
                <h6 class="quantity col-md-3 col-sm-3 col-3">Quantity</h6>
            </div>
            <% for( let index = 0; index < cart.length; index++ ) { %>               
                <div class="row item"> 
                    <div class="name col-md-4 col-sm-4 col-4"><%= cart[index].name %> </div>
                    <div class="price col-md-2 col-sm-2 col-2"><%= cart[index].price %></div> 
                    <div class="quantity col-md-3 col-sm-3 col-3"><%= cart[index].quantity %> </div>
                    <% cost += cart[index].price*cart[index].quantity %> 
                    <div class="col-md-3 col-sm-3 col-3">
                        <a href="/addcart/<%= cart[index].name %>"><i class="one fas fa-plus-square"></i></a>
                        <a href="/removecart/<%= cart[index].name %>"><i class="two fas fa-minus-square"></i></a>
                    </div>
                </div> 
            <% } %>
        <% } %>
        <div class="total">Total cost &nbsp &nbsp<%= cost %></div>
        <a class="btn btn-warning">Order Now!</a>
    </div>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    </body>
</html>